<% content_for :title do %>
  Game Master's Companion
<% end %>

<div class="row">
  <div class="col-md-6">
    <form class="" action="/campaigns/<%= @campaign.slug %>" method="post">
      <h2>Edit campaign</h2>
      <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="name" id="campaign_name"    value="<%=  @campaign.name %>">
      </div>
      <div class="form-group">
        <label for="Setting">Setting</label>
        <input type="text" class="form-control" name="setting" id="campaign_setting"      value="<%= @campaign.setting %>">
      </div>
      <div class="form-group">
        <label for="Notes">Notes</label>
        <br>
        <textarea name="notes" class="form-control" rows="8" style="min-width: 100%"><%= @campaign.notes %></textarea>
      </div>
    </form>
    <div class="row">
      <div class="col-md-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      <div class="col-md-2">
        <p><a href="/campaigns/<%= @campaign.slug %>">Cancel</a></p>
      </div>
    </div>
  </div>
</div>
