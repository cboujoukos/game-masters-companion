<% content_for :title do %>
  Game Master's Companion
<% end %>

<h1>Enemies index page</h1>
<div class="row">
  <div class="col-md-12">
    <% @enemies.sort{|x,y| x.name <=> y.name}.each do |enemy| %>
      <div class="row">
        <div class="col-md-8">
          <h4><a href="/campaigns/<%= @campaign.slug %>/characters/<%= enemy.id %>"><%= enemy.name %></a></h4>
        </div>
        <div class="col-md-4">
          <% if enemy.cr != "" %>
            <p>CR: <%= enemy.cr %></p>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <p>Armor Class: <%= enemy.ac %></p>
        </div>
        <div class="col-md-4">
          <p>Hit Points: <%= enemy.hp %></p>
        </div>
        <div class="col-md-4">
          <p>Passive Perception: <%= enemy.passive_perception %></p>
        </div>
      </div>
      <% if enemy.stats != "" %>
        <div class="row">
          <div class="col-md-12">
            <p>Stats: <%= enemy.stats %></p>
          </div>
        </div>
      <% end %>
      <% if enemy.notes != "" %>
        <div class="row">
          <div class="col-md-12">
            <p>Notes: <%= enemy.notes %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-8">
      <h3> <a href="/campaigns/<%= @campaign.slug %>">Back to Campaign</a> </h3>
    </div>
  </div>
</div>
