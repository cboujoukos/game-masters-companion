<% content_for :title do %>
  Game Master's Companion
<% end %>
<div class="row">
  <div class="col-md-12">
    <form class="" action="/<%= @campaign.slug %>/characters" method="post">
      <div class="row">
        <div class="col-md-8">
          <h2>Add a new character</h2>
          <div class="radio">
            <label>
              <input type="radio" name="character[category]" id="char_category" value="player"  checked>
              PC
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="character[category]" id="char_category" value="npc">
              NPC
            </label>
          </div>
          <div class="radio">
            <label>
              <input type="radio" name="character[category]" id="char_category" value="enemy">
              Enemy
            </label>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-md-8"
                <label for="Name">Name</label>
                <input type="text" class="form-control" name="character[name]" id="character_name"    placeholder="Name">
              </div>
              <div class="col-md-4"
                <label for="XP">Experience</label>
                <input type="text" class="form-control" name="character[xp]" id="char_xp"    placeholder="XP">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-md-3">
                <label for="AC">Armor Class</label>
                <input type="text" class="form-control" name="character[ac]" id="char_ac"    placeholder="AC">
              </div>
              <div class="col-md-3">
                <label for="HP">Hit Points</label>
                <input type="text" class="form-control" name="character[hp]" id="char_hp"    placeholder="HP">
              </div>
              <div class="col-md-3">
                <label for="pp">Perception</label>
                <input type="text" class="form-control" name="character[passive_perception]" id="char_pp"    placeholder="Passive Perception">
              </div>
              <div class="col-md-3">
                <label for="CR">Creature Rating</label>
                <input type="text" class="form-control" name="character[cr]" id="char_cr"    placeholder="CR">
              </div>
            </div> <!-- End of Row -->
          </div>

          <div class="form-group">
            <label for="Stats">Stats</label>
            <input type="text" class="form-control" name="character[stats]" id="character_stats"    placeholder="Stats">
          </div>
          <div class="form-group">
            <label for="Notes">Notes</label>
            <br>
            <textarea name="character[notes]" class="form-control" rows="4" style="min-width: 100%"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="AC">Attack Name</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Name">
            </div>
            <div class="col-md-3">
              <label for="HP">Attack Name</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Name">
            </div>
            <div class="col-md-3">
              <label for="pp">Attack Name</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Name">
            </div>
            <div class="col-md-3">
              <label for="pp">Attack Name</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Name">
            </div>
          </div> <!-- End of Row -->
          <div class="row">
            <div class="col-md-3">
              <label for="AC">Attack Bonus</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Attack Bonus">
            </div>
            <div class="col-md-3">
              <label for="HP">Attack Bonus</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Attack Bonus">
            </div>
            <div class="col-md-3">
              <label for="pp">Attack Bonus</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Attack Bonus">
            </div>
            <div class="col-md-3">
              <label for="pp">Attack Bonus</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Attack Bonus">
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label for="AC">Damage</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Damage">
            </div>
            <div class="col-md-3">
              <label for="HP">Damage</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Damage">
            </div>
            <div class="col-md-3">
              <label for="pp">Damage</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Damage">
            </div>
            <div class="col-md-3">
              <label for="pp">Damage</label>
              <input type="text" class="form-control" name="character[attacks][]" id="attack_name"    placeholder="Damage">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
