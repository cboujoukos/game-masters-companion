<% content_for :title do %>
  Game Master's Companion
<% end %>

<div class="container">
  <h2>Add a new encounter</h2>
  <form class="" action="/<%= @campaign.slug %>/encounters" method="post">
    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label for="Name">Name</label>
              <input type="text" class="form-control" name="encounter[name]"    id="encounter_name"    placeholder="Name">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label for="Loot">Loot</label>
              <input type="text" class="form-control" name="encounter[loot]"    id="loot"    placeholder="Loot">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="Notes">Notes</label>
          <br>
          <textarea name="character[notes]" class="form-control" style="min-width: 100%"></textarea>
        </div>
      <!--  <button type="submit" class="btn btn-default">Submit</button>
      </form> -->
    </div>
    <div class="col-md-6">
      <p>Find a way to import characters here</p>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  </div>
</div>
