<% content_for :title do %>
  Game Master's Companion
<% end %>

<div class="container">
  <h2>Add a new encounter</h2>
  <form class="" action="/<%= @campaign.slug %>/encounters" method="post">
    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label for="Name">Name</label>
              <input type="text" class="form-control" name="encounter[name]"    id="encounter_name"    placeholder="Name">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label for="Loot">Loot</label>
              <input type="text" class="form-control" name="encounter[loot]"    id="loot"    placeholder="Loot">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="Notes">Notes</label>
          <br>
          <textarea name="encounter[notes]" class="form-control" rows="4" style="min-width: 100%"></textarea>
        </div>
      <!--  <button type="submit" class="btn btn-default">Submit</button>
      </form> -->
    </div>
    <div class="col-md-3">
      <h4>Add Characters</h4>
      <h5>Players</h5>
      <% @campaign.characters.each do |char| %>
        <% if !!char.is_player %>
          <div class="checkbox">
            <label>
              <input type="checkbox" class="filled-in" checked="checked" name="encounter_characters[]" value="<%= char.id %>"> <%= char.name %>
            </label>
          </div>
        <% end %>
      <% end %>
      <h5>NPCs</h5>
      <% @campaign.characters.each do |char| %>
        <% if !char.is_player %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="encounter_characters[]" value="<%= char.id %>"> <%= char.name %>
            </label>
          </div>
        <% end %>
      <% end %>
      </div>
      <div class="col-md-3">
        <h4>Add Enemies</h4>
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Enemies
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="/campaigns/<%= @campaign.slug %>">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </div>
        <% @campaign.enemies.each do |enemy| %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="encounter_enemies[]" value="<%= enemy.id %>"> <%= enemy.category %>
            </label>
          </div>
        <% end %>
        <br><br>
        <p><a href="#">Add a new enemy</a></p>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
